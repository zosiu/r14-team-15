.row
  .col-lg-12
    %h1.page-header Nabaztag:tag

    .panel.panel-primary
      .panel-heading Nabaztag:tag uid
      .panel-body
        -# = image_tag 'codeship_setup.png', style: 'max-width:100%;height:auto;'
      .panel-footer
        - config_url current_user.nabaztag_uid

  .col-lg-12
    .panel.panel-primary
      .panel-heading Nabaztag:tag server url
      .panel-body
        = image_tag 'nabaztag_setup.png', style: 'max-width:100%;height:auto;'
      .panel-footer
        - config_url root_url

  .col-lg-12
    = simple_form_for('nabaztag', url: nabaztag_setup_path, html: { id: 'nabaztagForm', method: :post }) do |f|
      .row.control-group
        .form-group.col-xs-12.floating-label-form-group.controls
          = f.input :mac_address, autofocus: true, placeholder: 'Your nabaztad uid (MAC address)', input_html: { class: '.form-control', size: 128 }, required: false
      .row
        .form-group.col-xs-12
          = f.button :submit, 'Save', class: 'btn btn-success btn-lg'
