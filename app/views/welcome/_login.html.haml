#loginModal.portfolio-modal.modal.fade{'aria-hidden' => 'true', role: 'dialog', tabindex: '-1'}
  .modal-content
    .close-modal{'data-dismiss' => 'modal'}
      .lr
        .rl
    .container
      .row
        .col-lg-8.col-lg-offset-2
          .modal-body.text-center
            %h2 Login
            %hr.star-primary/

            = simple_form_for(user_resource, as: user_resource_name, url: session_path(user_resource_name), html: { id: 'loginForm' }, remote: true, format: :json) do |f|
              %p#login-error.help-block.text-danger

              .row.control-group
                .form-group.col-xs-12.floating-label-form-group.controls
                  = f.input :email, autofocus: true, placeholder: 'Email address', input_html: { class: '.form-control' }, required: false
              .row.control-group
                .form-group.col-xs-12.floating-label-form-group.controls
                  = f.input :password, placeholder: 'Password', input_html: { class: '.form-control' }, required: false

              .row
                .form-group.col-xs-12
                  = f.button :submit, 'Log in', class: 'btn btn-success btn-lg'

            -# = link_to 'Forgot your password?', new_password_path(user_resource_name)
            -# %a{href: '#forgottenpasswordModal', 'data-toggle' => 'modal'} Forgot your password?
            -# %br/

            %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'}
              %i.fa.fa-times
              Close
